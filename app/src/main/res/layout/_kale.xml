<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgKale"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/kale"
        />

    <EditText
        android:id="@+id/txtKale"
        android:layout_below="@id/imgKale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Common name: \nKale" />

    <EditText
        android:id="@+id/charKale"
        android:layout_below="@id/txtKale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:gravity="center"
        android:text="Characteristics: \nIt can be planted in any season. The recommended period of planting is during October â€“ April." />

    <EditText
        android:id="@+id/infoKale"
        android:layout_below="@id/charKale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Estimate harvest time: \nSprout: 3-4 days\nHarvest: 45-50 days after transplanted" />

    <Button
        android:id="@+id/bntCrop6"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Plant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"/>
</RelativeLayout>