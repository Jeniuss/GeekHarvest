<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgThaiEgg"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/thai_eggplant"
        />

    <EditText
        android:id="@+id/txtThaiEgg"
        android:layout_below="@id/imgThaiEgg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Common name: \nThai eggplant" />

    <EditText
        android:id="@+id/charThaiEgg"
        android:layout_below="@id/txtThaiEgg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:gravity="center"
        android:text="Characteristics: \nIt can be planted in any type of soil, and in any season. During the sprouting period, it should be watered every day." />

    <EditText
        android:id="@+id/infoThaiEgg"
        android:layout_below="@id/charThaiEgg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Estimate harvest time: \nSprout: 7-10 days\nHarvest: 50-60 days after transplanted" />

    <Button
        android:id="@+id/bntCrop12"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="450dp"
        android:background="@color/colorPrimary"
        android:text="Plant" />

</RelativeLayout>