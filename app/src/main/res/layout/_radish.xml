<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgRadish"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/radish" />

    <EditText
        android:id="@+id/txtRadish"
        android:layout_below="@id/imgRadish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Common name: \nRadish" />

    <EditText
        android:id="@+id/charRadish"
        android:layout_below="@id/txtRadish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:gravity="center"
        android:text="Characteristics: \nRadish itself is round or cone-shaped root. It will be green during first stage of growth, and will be change to brown when matured." />

    <EditText
        android:id="@+id/infoRadish"
        android:layout_below="@id/charRadish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Estimate harvest time: \nSprout: 3-4 days\nHarvest: 45-50 days after transplanted" />

    <Button
        android:id="@+id/bntCrop8"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Plant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"/>

</RelativeLayout>