<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgSpinach"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/spinach"
        />

    <EditText
        android:id="@+id/txtSpinach"
        android:layout_below="@id/imgSpinach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Common name: \nSpinach" />

    <EditText
        android:id="@+id/charSpinach"
        android:layout_below="@id/txtSpinach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:gravity="center"
        android:text="Characteristics: \nIt appeared as ivy or small bushes. Spinach nowadays had been bred to make it suitable for eating." />

    <EditText
        android:id="@+id/infoSpinach"
        android:layout_below="@id/charSpinach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Estimate harvest time: \nSprout: 4-5 days\nHarvest: 40-60 days after transplanted" />

    <Button
        android:id="@+id/bntCrop10"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Plant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"/>

</RelativeLayout>