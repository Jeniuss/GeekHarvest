<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgCoriander"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/coriander" />

     <EditText
         android:id="@+id/txtCoriander"
         android:layout_below="@id/imgCoriander"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="Common name: \nCoriander" />

    <EditText
        android:id="@+id/charCoriander"
        android:layout_below="@id/txtCoriander"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:gravity="center"
        android:text="Characteristics: \nCoriander is easy to plant and has low chance of disease from pest." />

    <EditText
        android:id="@+id/infoCoriander"
        android:layout_below="@id/charCoriander"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Estimate harvest time: \nSprout: 4-7 days\nHarvest: 45-50 days after transplanted" />

    <Button
        android:id="@+id/bntCrop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="450dp"
        android:background="@color/colorPrimary"
        android:text="Plant" />

</RelativeLayout>