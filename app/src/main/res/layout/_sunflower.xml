<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imgSunflower"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sunflower"
        />

    <EditText
        android:id="@+id/txtSunflower"
        android:layout_below="@id/imgSunflower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Common name: \nSunflower Sprout" />

    <EditText
        android:id="@+id/charSunflower"
        android:layout_below="@id/txtSunflower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:gravity="center"
        android:text="Characteristics: \nEasy to plant, popular in many dishes. Can also eaten fresh or cook with other food. It contained rich nutrients especially protein." />

    <EditText
        android:id="@+id/infoSunflower"
        android:layout_below="@id/charSunflower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Estimate harvest time: \nSprout: 2 days\nHarvest: 7-11 days after sprouted" />

    <Button
        android:id="@+id/bntCrop13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="450dp"
        android:background="@color/colorPrimary"
        android:text="Plant" />

</RelativeLayout>