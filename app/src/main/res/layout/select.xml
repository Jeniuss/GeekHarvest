<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:text="@string/sel_Plant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectPlant"
                android:textSize="@dimen/h2"
                android:textColor="#54ca64"
                android:textStyle="bold" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgChilli"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/chilli" />

                    <TextView
                        android:id="@+id/txtChilli"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Chilli"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgCoriander"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/coriander" />

                    <TextView
                        android:id="@+id/txtCoriander"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Coriander"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgBasil"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/basil" />

                    <TextView
                        android:id="@+id/txtBasil"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Basil"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgCelery"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/celery" />

                    <TextView
                        android:id="@+id/txtCelery"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Celery"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgEggPlant"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/eggplant" />

                    <TextView
                        android:id="@+id/txtEggPlant"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Egg Plant"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgKale"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/kale" />

                    <TextView
                        android:id="@+id/txtKale"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Kale"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgLemon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/lemonbasil" />

                    <TextView
                        android:id="@+id/txtLemon"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Lemon Basil"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgRadish"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/radish" />

                    <TextView
                        android:id="@+id/txtRadish"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Radish"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgTomato"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/native_tomato_small_2" />

                    <TextView
                        android:id="@+id/txtTomato"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Santa Tomato"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgSpinach"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/spinach" />

                    <TextView
                        android:id="@+id/txtSpinach"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Spinach"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgSweetBasil"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/thai_basil_with_flowers" />

                    <TextView
                        android:id="@+id/txtSweetBasil"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Sweet Basil"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgThaiEgg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/thai_eggplant" />

                    <TextView
                        android:id="@+id/txtThaiEgg"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Thai Egg Plant"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imgSunflower"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/sunflower" />

                    <TextView
                        android:id="@+id/txtSunflower"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="      Sunflower"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/h4"
                        android:gravity="center"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
